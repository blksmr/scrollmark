{
  "name": "Scrowl",
  "private": true,
  "version": "1.0.0",
  "description": "A ready-to-use React scroll spy hook with automatic overlay detection",
  "type": "module",
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "packages/*",
    "website"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "build": "turbo run build",
    "start": "cd website && npm run start",
    "build:dev": "turbo run build:dev",
    "documentation": "npx tsx scripts/documentation.ts",
    "test": "turbo run test"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "overrides": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
